page {
  background: #f6f6f6;
  background-image: url(cloud://yyqw-init.7979-yyqw-init-1301669641/my-image.jpg);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo{
  margin-top: 100rpx;
