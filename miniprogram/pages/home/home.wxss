.table {
  margin-top: 140rpx;
  font-size: 34rpx;
  border: 2rpx solid darkgray;
  width: 80%;
}

.tr {
 display: flex;
 width: 100%;
 justify-content: center;
 height: auto;
 align-items: center;
}

.td-1 {
  width:40%;
  justify-content: center;
  display: flex;
  flex-direction: column;
  text-align: center;
  border-right: 2rpx solid #ddd;
  height: auto;
}

.td-2 {
  width:60%;
  justify-content: center;
  display: flex;
  flex-direction: column;
  border-right: 2rpx solid #ddd;
  text-align: left;
  height: auto;
}

.bg-w{
 background: #afb4db;
}

.bg-g{
 background: #E6F3F9;
}

.bg-g2{
 background: #fff;
}

.th {
 width: 40%;
 justify-content: center;
 color: #fff;
 display: flex;
 height: 3rem;
 align-items: center;
 border-right: 2rpx solid #ddd;
}

.th-2 {
 width: 60%;
 justify-content: center;
 color: #fff;
 display: flex;
 height: 3rem;
 align-items: center;
}

.th-text {
 width: 100%;
 justify-content: center;
 color: #000;
 display: flex;
 flex-direction: row;
 align-items: center;
 vertical-align: center;
 max-width: 100%;
}

.background {
  width: 100%;
  height: 100%;
  position: absolute;
  background-size:100% 100%;
  z-index: -1;
